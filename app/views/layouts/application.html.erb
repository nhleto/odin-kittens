<!DOCTYPE html>
<html>

<head>
  <title>OdinKittens</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <div class="navbar is-dark">
    <div class="navbar-brand">
      <div class="navbar-item">
        <h2 class="title is-2" style='color:white'>
          Kittens
        </h2>
      </div>
    </div>
  </div>

  <% if flash[:notice] %>

  <div class="container" id='odin-test'>
    <div class="notification is-primary is-light">
      <p class="notice">
        <%= notice %>
        <button class="delete" id='flash'></button>
      </p>
    </div>
  </div>

  <% end %>

  <% if flash[:alert] %>

  <div class="container" id='odin-test'>
    <div class="notification is-danger is-light">
      <p class="notice">
        <%= alert %>
        <button class="delete" id='flash'></button>
      </p>
    </div>
  </div>

  <% end %>

  <%= yield %>
</body>

</html>